.gauge._pc
  - 1.step(challenge.enemy_max_life, 7) do |i|
    .gauge-wrap
      - if i == 1
        .gauge-ttl
          span = "HP　#{challenge.enemy_life}／#{challenge.enemy_max_life}"
      .gauge-bg
        ul.gauge-main
          - if (challenge.enemy_life - (i - 1)) >= 7
            - 7.times do
              li.gauge-block
          - else
            - (challenge.enemy_life - (i - 1)).times do
              li.gauge-block
